<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/fab_margin"
    android:layout_marginEnd="@dimen/fab_margin"
    android:paddingBottom="@dimen/fab_margin"
    android:paddingTop="@dimen/fab_margin"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/whiteListCheckboxHolder"
        android:paddingBottom="@dimen/fab_margin"
        android:orientation="vertical" />

    <com.cardinalcommerce.a.setAnimationMatrix
        android:id="@+id/whyInfoLableTextview"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/blue"
        android:layout_marginTop="@dimen/marginBottom"
        android:textStyle="bold"
        android:focusable="true" />
    <!--android:background="@color/colorwhybackground"-->


    <com.cardinalcommerce.a.setAnimationMatrix
        android:id="@+id/whyInfoDecTextview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorBlack"
        android:visibility="gone"
        android:layout_marginTop="@dimen/marginBottom"
        />

    <!--android:visibility="gone"-->
    <com.cardinalcommerce.a.setAnimationMatrix
        android:id="@+id/helpLabelTextView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/marginBottom"
        android:textColor="@color/blue"
        android:textStyle="bold"
        android:focusable="true" />

    <com.cardinalcommerce.a.setAnimationMatrix
        android:id="@+id/helpDecTextview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/marginBottom"
        android:textColor="@color/colorBlack"
        android:visibility="gone"/>
</LinearLayout>
